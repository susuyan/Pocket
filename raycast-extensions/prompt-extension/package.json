{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "pocket",
  "title": "Pocket",
  "description": "",
  "icon": "extension-icon.png",
  "author": "susuyan",
  "owner": "susuyan-studio",
  "platforms": [
    "macOS",
    "Windows"
  ],
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "pocket",
      "title": "Pocket Prompts",
      "subtitle": "个人 Prompt 库",
      "description": "输入 pocket 打开 Prompt 列表，选择后复制到剪贴板",
      "mode": "view",
      "keywords": [
        "pocket",
        "prompt",
        "列表",
        "复制",
        "剪贴板"
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.104.3",
    "@raycast/utils": "^1.17.0",
    "gray-matter": "^4.0.3"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "build:prompts": "node scripts/build-prompts.mjs",
    "build": "npm run build:prompts && ray build",
    "dev": "npm run build:prompts && ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  }
}
